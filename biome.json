{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "extends": [],
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "bracketSpacing": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "scripts/**",
      "packages/plugin-runtime/**",
      "packages/plugin-runtime-types/**",
      "src-tauri/**",
      "src-web/tailwind.config.cjs",
      "src-web/postcss.config.cjs",
      "src-web/vite.config.ts",
      "src-web/routeTree.gen.ts"
    ]
  }
}
